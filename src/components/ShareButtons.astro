---
interface Props {
    title: string;
    url: string | URL;
}

const { title, url } = Astro.props;
const currentLocale = Astro.currentLocale || "en";

const t = {
    share: currentLocale === "zh" ? "分享" : "Share",
    copy: currentLocale === "zh" ? "复制链接" : "Copy Link",
    copied: currentLocale === "zh" ? "已复制！" : "Copied!",
};
---

<div
    class="flex items-center gap-4 py-6 border-t border-border-subtle/40 mt-12"
>
    <span class="text-sm font-light text-secondary">{t.share}</span>
    <div class="flex gap-2">
        <!-- Twitter / X -->
        <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url.toString())}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full border border-border-subtle text-secondary hover:text-primary hover:border-primary transition-all duration-200"
            aria-label="Share on X"
        >
            <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
            >
                <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
            </svg>
        </a>

        <!-- LinkedIn -->
        <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url.toString())}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full border border-border-subtle text-secondary hover:text-primary hover:border-primary transition-all duration-200"
            aria-label="Share on LinkedIn"
        >
            <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
            >
                <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
            </svg>
        </a>

        <!-- Copy Link -->
        <button
            id="copy-link-btn"
            data-url={url}
            data-copy-text={t.copy}
            data-copied-text={t.copied}
            class="p-2 rounded-full border border-border-subtle text-secondary hover:text-primary hover:border-primary transition-all duration-200 relative group"
            aria-label="Copy Link"
        >
            <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                ></path>
            </svg>
            <span
                id="copy-tooltip"
                class="absolute -top-10 left-1/2 -translate-x-1/2 px-2 py-1 bg-stone-800 text-white dark:bg-stone-100 dark:text-black text-xs rounded opacity-0 transition-opacity duration-200 pointer-events-none whitespace-nowrap"
            >
                {t.copy}
            </span>
        </button>
    </div>
</div>

<script>
    const copyBtn = document.getElementById("copy-link-btn");
    const tooltip = document.getElementById("copy-tooltip");

    if (copyBtn && tooltip) {
        copyBtn.addEventListener("click", async () => {
            const url = copyBtn.getAttribute("data-url");
            const copyText = copyBtn.getAttribute("data-copy-text");
            const copiedText = copyBtn.getAttribute("data-copied-text");

            if (url) {
                try {
                    await navigator.clipboard.writeText(url);
                    tooltip.innerText = copiedText || "Copied!";
                    tooltip.classList.remove("opacity-0");
                    setTimeout(() => {
                        tooltip.classList.add("opacity-0");
                        setTimeout(() => {
                            tooltip.innerText = copyText || "Copy Link";
                        }, 200);
                    }, 2000);
                } catch (err) {
                    console.error("Failed to copy: ", err);
                }
            }
        });
    }
</script>
