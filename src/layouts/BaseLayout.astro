---
import ThemeIcon from "../components/ThemeIcon.astro";
import LanguagePicker from "../components/LanguagePicker.astro";
import { getTranslations } from "../i18n/translations";
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  translatedUrls?: { [key: string]: string };
}

const defaultLocale = "zh"; // Hardcode defaultLocale for now as Astro.i18n is undefined
const locales = ["zh", "en"];
const pathParts = Astro.url.pathname.split("/").filter((p) => p);
const currentLocale = locales.includes(pathParts[0])
  ? pathParts[0]
  : defaultLocale;
const t = getTranslations(currentLocale as "en" | "zh");

function getPath(path: string) {
  if (currentLocale === defaultLocale) {
    return path;
  }
  return `/${currentLocale}${path}`;
}

const {
  title = "Zen X Hunger - 思考、探索、品味",
  description = "A multi-disciplinary creator portfolio showcasing AI explorations, reading reflections, and XR research",
} = Astro.props;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Pro:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    <title>{title}</title>

    <!-- FOUC Prevention: Set theme before page renders -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>

    <style>
      body {
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
      }
      .font-serif {
        font-family: "Crimson Pro", Georgia, serif;
      }
    </style>
  </head>
  <body
    class="bg-stone-50 dark:bg-stone-950 text-stone-900 dark:text-stone-100 antialiased transition-colors duration-200"
  >
    <nav
      class="border-b border-stone-200/60 dark:border-stone-800/60 bg-white/90 dark:bg-stone-900/90 backdrop-blur-md sticky top-0 z-50 shadow-sm dark:shadow-stone-900/50"
    >
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="flex justify-between items-center h-20">
          <!-- Logo/Brand -->
          <a
            href={getPath("/")}
            class="text-xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 hover:text-stone-600 dark:hover:text-stone-400 transition-all duration-300"
          >
            Zen X Hunger
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a
              href={getPath("/studio")}
              class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group"
            >
              {t["nav.studio"]}
              <span
                class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"
              ></span>
            </a>
            <a
              href={getPath("/library")}
              class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group"
            >
              {t["nav.library"]}
              <span
                class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"
              ></span>
            </a>
            <a
              href={getPath("/cafe")}
              class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group"
            >
              {t["nav.cafe"]}
              <span
                class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"
              ></span>
            </a>
            <a
              href={getPath("/club")}
              class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group"
            >
              {t["nav.club"]}
              <span
                class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"
              ></span>
            </a>
            <a
              href={getPath("/ai-usage")}
              class="text-sm font-medium text-stone-500 dark:text-stone-500 hover:text-stone-700 dark:hover:text-stone-300 transition-all duration-200"
            >
              {t["nav.ai-usage"]}
            </a>

            <!-- Theme Toggle & Language Picker -->
            <div class="flex items-center gap-4">
              <ThemeIcon />
              <LanguagePicker translatedUrls={Astro.props.translatedUrls} />
            </div>
          </div>

          <!-- Mobile Menu Button & Toggles -->
          <div class="md:hidden flex items-center gap-2">
            <ThemeIcon />
            <LanguagePicker translatedUrls={Astro.props.translatedUrls} />
            <button
              id="mobile-menu-button"
              class="p-2 rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 focus:outline-none focus:ring-2 focus:ring-emerald-600 transition-all"
              aria-label="Toggle menu"
            >
              <svg
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-6 space-y-1">
          <a
            href={getPath("/studio")}
            class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all"
          >
            {t["nav.studio"]}
          </a>
          <a
            href={getPath("/library")}
            class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all"
          >
            {t["nav.library"]}
          </a>
          <a
            href={getPath("/cafe")}
            class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all"
          >
            {t["nav.cafe"]}
          </a>
          <a
            href={getPath("/club")}
            class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all"
          >
            {t["nav.club"]}
          </a>
          <a
            href={getPath("/ai-usage")}
            class="block px-4 py-3 rounded-lg text-base font-medium text-stone-500 dark:text-stone-500 hover:text-stone-700 dark:hover:text-stone-300 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all"
          >
            {t["nav.ai-usage"]}
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer
      class="border-t border-stone-200/60 dark:border-stone-800/60 bg-white/50 dark:bg-stone-900/50 backdrop-blur-sm mt-32"
    >
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-12">
        <div
          class="text-center text-sm text-stone-500 dark:text-stone-400 space-y-2"
        >
          <p class="font-light">
            &copy; {new Date().getFullYear()} Zen X Hunger
          </p>
          <p class="text-xs text-stone-400 dark:text-stone-500">
            Thinking, exploring, tasting.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const button = document.getElementById("mobile-menu-button");
      const menu = document.getElementById("mobile-menu");

      button?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
      });

      // Theme toggle handler - using event delegation
      (function () {
        // Prevent multiple initializations
        if (window.themeToggleInitialized) {
          return;
        }
        window.themeToggleInitialized = true;

        function setTheme(theme) {
          if (theme === "dark") {
            document.documentElement.classList.add("dark");
            localStorage.setItem("theme", "dark");
          } else {
            document.documentElement.classList.remove("dark");
            localStorage.setItem("theme", "light");
          }
        }

        function handleThemeToggle(event) {
          // Check if the clicked element or its parent is a theme toggle button
          const target = event.target.closest(".theme-toggle");
          if (!target) return;

          event.preventDefault();
          event.stopPropagation();

          const isDark = document.documentElement.classList.contains("dark");
          setTheme(isDark ? "light" : "dark");
        }

        document.addEventListener("click", handleThemeToggle);
      })();
    </script>
    <Analytics />
  </body>
</html>
