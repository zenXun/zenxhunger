---
import ThemeIcon from '../components/ThemeIcon.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Zen X Hunger - 思考、探索、品味",
  description = "A multi-disciplinary creator portfolio showcasing AI explorations, reading reflections, and XR research"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Pro:wght@400;600&display=swap" rel="stylesheet" />
    <title>{title}</title>

    <!-- FOUC Prevention: Set theme before page renders -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <style>
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      }
      .font-serif {
        font-family: 'Crimson Pro', Georgia, serif;
      }
    </style>
  </head>
  <body class="bg-stone-50 dark:bg-stone-950 text-stone-900 dark:text-stone-100 antialiased transition-colors duration-200">
    <nav class="border-b border-stone-200/60 dark:border-stone-800/60 bg-white/90 dark:bg-stone-900/90 backdrop-blur-md sticky top-0 z-50 shadow-sm dark:shadow-stone-900/50">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="flex justify-between items-center h-20">
          <!-- Logo/Brand -->
          <a href="/" class="text-xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 hover:text-stone-600 dark:hover:text-stone-400 transition-all duration-300">
            Zen X Hunger
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/ai" class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group">
              AI
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="/library" class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group">
              Library
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="/xr" class="text-sm font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-200 relative group">
              XR
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-700 dark:bg-emerald-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="/ai-usage" class="text-sm font-medium text-stone-500 dark:text-stone-500 hover:text-stone-700 dark:hover:text-stone-300 transition-all duration-200">
              AI Usage
            </a>

            <!-- Theme Toggle -->
            <ThemeIcon />
          </div>

          <!-- Mobile Menu Button & Theme Toggle -->
          <div class="md:hidden flex items-center gap-2">
            <ThemeIcon />
            <button
              id="mobile-menu-button"
              class="p-2 rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 focus:outline-none focus:ring-2 focus:ring-emerald-600 transition-all"
              aria-label="Toggle menu"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-6 space-y-1">
          <a href="/ai" class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all">
            AI
          </a>
          <a href="/library" class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all">
            Library
          </a>
          <a href="/xr" class="block px-4 py-3 rounded-lg text-base font-medium text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all">
            XR
          </a>
          <a href="/ai-usage" class="block px-4 py-3 rounded-lg text-base font-medium text-stone-500 dark:text-stone-500 hover:text-stone-700 dark:hover:text-stone-300 hover:bg-stone-100/80 dark:hover:bg-stone-800/80 transition-all">
            AI Usage
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="border-t border-stone-200/60 dark:border-stone-800/60 bg-white/50 dark:bg-stone-900/50 backdrop-blur-sm mt-32">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-12">
        <div class="text-center text-sm text-stone-500 dark:text-stone-400 space-y-2">
          <p class="font-light">&copy; {new Date().getFullYear()} Zen X Hunger</p>
          <p class="text-xs text-stone-400 dark:text-stone-500">Thinking, exploring, tasting.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const button = document.getElementById('mobile-menu-button');
      const menu = document.getElementById('mobile-menu');

      button?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
