---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslations } from "../../i18n/translations";

const { currentLocale } = Astro;
const t = getTranslations(currentLocale as "en" | "zh");
---

<BaseLayout
  title={}
  description={t["aiUsage.description"]}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-4xl font-bold text-stone-900 dark:text-stone-100 mb-8">
      {t["aiUsage.title"]}
    </h1>

    <div class="prose prose-stone prose-lg max-w-none dark:prose-invert">
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-stone-800 dark:text-stone-200 mb-4">{t["aiUsage.philosophy.title"]}</h2>
        <p class="text-stone-700 dark:text-stone-300 leading-relaxed mb-4">
          {t["aiUsage.philosophy.p1"]}
        </p>
        <p class="text-stone-700 dark:text-stone-300 leading-relaxed">
          {t["aiUsage.philosophy.p2"]}
        </p>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-stone-800 dark:text-stone-200 mb-4">{t["aiUsage.howUsed.title"]}</h2>
        <ul class="space-y-3 text-stone-700 dark:text-stone-300">
          <li class="flex items-start">
            <span class="text-green-600 mr-2">✓</span>
            <span><strong>{t["aiUsage.howUsed.item1.strong"]}:</strong> {t["aiUsage.howUsed.item1.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">✓</span>
            <span><strong>{t["aiUsage.howUsed.item2.strong"]}:</strong> {t["aiUsage.howUsed.item2.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">✓</span>
            <span><strong>{t["aiUsage.howUsed.item3.strong"]}:</strong> {t["aiUsage.howUsed.item3.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">✓</span>
            <span><strong>{t["aiUsage.howUsed.item4.strong"]}:</strong> {t["aiUsage.howUsed.item4.span"]}</span>
          </li>
        </ul>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-stone-800 dark:text-stone-200 mb-4">{t["aiUsage.humanRemain.title"]}</h2>
        <ul class="space-y-3 text-stone-700 dark:text-stone-300">
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">●</span>
            <span><strong>{t["aiUsage.humanRemain.item1.strong"]}:</strong> {t["aiUsage.humanRemain.item1.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">●</span>
            <span><strong>{t["aiUsage.humanRemain.item2.strong"]}:</strong> {t["aiUsage.humanRemain.item2.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">●</span>
            <span><strong>{t["aiUsage.humanRemain.item3.strong"]}:</strong> {t["aiUsage.humanRemain.item3.span"]}</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">●</span>
            <span><strong>{t["aiUsage.humanRemain.item4.strong"]}:</strong> {t["aiUsage.humanRemain.item4.span"]}</span>
          </li>
        </ul>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-stone-800 dark:text-stone-200 mb-4">{t["aiUsage.transparency.title"]}</h2>
        <p class="text-stone-700 dark:text-stone-300 leading-relaxed mb-4">
          {t["aiUsage.transparency.p1"]}
        </p>
        <p class="text-stone-700 dark:text-stone-300 leading-relaxed">
          {t["aiUsage.transparency.p2"]}
        </p>
      </section>

      <section class="bg-stone-100 dark:bg-stone-800/50 rounded-lg p-6 mt-12">
        <p class="text-sm text-stone-600 dark:text-stone-400 italic mb-2">
          {t["aiUsage.lastUpdated"]}: {new Date().toLocaleDateString(currentLocale, { year: "numeric", month: "long", day: "numeric" })}
        </p>
        <p class="text-sm text-stone-600 dark:text-stone-400">
          {t["aiUsage.feedback"]}
        </p>
      </section>
    </div>
  </article>
</BaseLayout>

